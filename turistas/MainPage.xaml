<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="turistas.MainPage">

    <Grid>
            <Image
                Source="inicio.jpg"
                 Aspect="AspectFill"/>

          <Button Text="Início"
                 Clicked="ClicarInicio"
                 BorderColor="#521d1d"
                 BorderWidth="2"
                 TextColor="#521d1d"
                 Margin="10, 300, 10, 20"
                 HeightRequest="60"
                 CornerRadius="30"
                 BackgroundColor="#c999c3"
                 FontSize="30"
                 VerticalOptions="EndAndExpand"
                  FontFamily="fonte"
                 HorizontalOptions="FillAndExpand"/>




                    
     <Label Text="Estábulo Turístico"
     TextColor="#521d1d"
     Margin="20"
     FontSize="40"
     HorizontalOptions="Center"
     HorizontalTextAlignment="Center"
     FontFamily="fonte"/>
           



 </Grid>

</ContentPage>
